<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <dimen name="spacing_gigante">32dp</dimen>
    <dimen name="spacing_grande">24dp</dimen>
    <dimen name="spacing_normal">16dp</dimen>
    <dimen name="spacing_pequeno">8dp</dimen>
    <dimen name="spacing_micro">4dp</dimen>

    <dimen name="font_gigante">22sp</dimen>
    <dimen name="font_grande">18sp</dimen>
    <dimen name="font_normal">14sp</dimen>
    <dimen name="font_pequena">12sp</dimen>
    <dimen name="font_micro">11sp</dimen>

    <style name="Texto">
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>

    <style name="Titulo" parent="Texto">
        <item name="android:textSize">@dimen/font_gigante</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>
